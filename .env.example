# Fortaleza Purchase Agent - Local Development Configuration
# Copy this file to .env.local and fill in your values

# Operating Mode
MODE=dryrun
HEADLESS=false
CONFIRM_PROD=NO

# Product Configuration
PRODUCT_NAME=Fortaleza
PRODUCT_URL=

# Logging
LOG_LEVEL=INFO
JSON_LOGS=false

# GCP (leave empty for local development with local secrets)
GCP_PROJECT_ID=
GCP_REGION=us-central1
USE_SECRET_MANAGER=false

# Webhook Configuration
PI_WEBHOOK_SHARED_SECRET=test-webhook-secret-123
WEBHOOK_TIMESTAMP_TOLERANCE=300

# Local Secrets (DEVELOPMENT ONLY - DO NOT COMMIT)
# Leave empty for now - will be needed in Phase 2
BNB_EMAIL=
BNB_PASSWORD=
CC_NUMBER=
CC_EXP_MONTH=
CC_EXP_YEAR=
CC_CVV=
BILLING_NAME=
BILLING_ADDRESS1=
BILLING_ADDRESS2=
BILLING_CITY=
BILLING_STATE=
BILLING_ZIP=
DOB_MONTH=
DOB_DAY=
DOB_YEAR=

# Pushover Notifications (optional for Phase 1 testing)
PUSHOVER_APP_TOKEN=
PUSHOVER_USER_KEY=

# Google Gemini API (needed for Phase 2+)
GOOGLE_API_KEY=
